@model VMKullanici
@{
    ViewData["Title"] = "Hakkında";
    Kullanici? entity_Kullanici = null;
    if (Model != null)
    {
        entity_Kullanici = Model.entity_Kullanici;
    }
}
@if (entity_Kullanici != null)
{
    <!-- About Section -->
    <section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <h2>Hakkında</h2>
        <p>@entity_Kullanici.Hakkinda</p>
    </div><!-- End Section Title -->

    <div class="container section-title aos-animate" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@entity_Kullanici.ProfilFoto" class="img-fluid" style="width: 100%;" alt>
            </div>

            <div class="col-lg-8 content">
                <h2>@entity_Kullanici.Bolum</h2>
                <p class="fst-italic py-3">Kişisel Bilgiler :</p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Günü:</strong>
                                <span>@entity_Kullanici.DogumGunu</span>
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon Numarası:</strong>
                                <span>@entity_Kullanici.TelefonNo</span>
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong>
                                <span>@entity_Kullanici.Sehir</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong>
                                <span>@entity_Kullanici.Yas</span>
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong>
                                <span>@entity_Kullanici.Email</span>
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Okul:</strong>
                                <span>@entity_Kullanici.Okul</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    <!-- /About Section -->
}
